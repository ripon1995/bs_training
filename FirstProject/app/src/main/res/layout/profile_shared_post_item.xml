<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imagePost"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:src="@drawable/response"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/postDetailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/imagePost"
        app:layout_constraintTop_toTopOf="@id/imagePost" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/postDetailsLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:padding="5dp"
        android:text="@string/shared_a_photo"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/postDetailsLabel"
        app:layout_constraintTop_toTopOf="@id/imagePost" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_event_24"
        app:layout_constraintStart_toStartOf="@id/postDetailsLabel"
        app:layout_constraintTop_toBottomOf="@id/postDetailsLabel" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:padding="5dp"
        android:text="@string/_25_minutes_ago"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/imageEvent"
        app:layout_constraintStart_toEndOf="@id/imageEvent"
        app:layout_constraintTop_toTopOf="@id/imageEvent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/postImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/image_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagePost" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postImages" />

</androidx.constraintlayout.widget.ConstraintLayout>