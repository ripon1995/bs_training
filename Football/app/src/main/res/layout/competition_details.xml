<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCompetitionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:text="Competition name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="#DC143C"
            app:layout_constraintEnd_toEndOf="@id/tvCompetitionName"
            app:layout_constraintStart_toStartOf="@id/tvCompetitionName"
            app:layout_constraintTop_toBottomOf="@id/tvCompetitionName" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivHostFlag"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLabelStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="From"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/ivHostFlag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivHostFlag" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-05-31"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/tvLabelStartDate"
            app:layout_constraintStart_toStartOf="@id/tvLabelStartDate"
            app:layout_constraintTop_toBottomOf="@id/tvLabelStartDate" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLabelEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="To"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivHostFlag"
            app:layout_constraintTop_toTopOf="@id/ivHostFlag" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-05-31"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/tvLabelEnd"
            app:layout_constraintStart_toStartOf="@id/tvLabelEnd"
            app:layout_constraintTop_toBottomOf="@id/tvLabelEnd" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvWinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Winner"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivHostFlag" />

        <View
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:background="#DC143C"
            app:layout_constraintEnd_toEndOf="@id/tvWinnerLabel"
            app:layout_constraintStart_toStartOf="@id/tvWinnerLabel"
            app:layout_constraintTop_toBottomOf="@id/tvWinnerLabel" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvWinnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Winner name"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/ivWinnerFlag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivWinnerFlag" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivWinnerFlag"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWinnerLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>